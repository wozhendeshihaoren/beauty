page{
  height: 100%;
  background:linear-gradient(35deg,#ccffff,#ffcccc);
}
image{
  width: 100%;
  height: 35%;
}

.proInfo {
  padding-left:30rpx ;
  margin-top: 30rpx;
}
.proInfo .infoItem{
  font-weight: bold;
  font-size: 35rpx;
}

.datePart{
  margin-top: 30rpx;
}
.datePart .datetitle {
  padding-left: 30rpx;
  font-weight: bold;
}

.datePart .dateAndTime {
  display: flex;
}
.datePart .dateAndTime .section{
  display: flex;
  padding-left: 70rpx;
  margin-top: 20rpx;
}

.datePart .dateAndTime .section image {
  width: 35rpx;
  height: 35rpx;
}
.datePart .dateAndTime .section .picker{
  border: 1rpx solid #999;
  margin-left: 15rpx;
  width: 200rpx;
  border-radius: 10rpx;
  font-size: 25rpx;
  color: #999;
}

.formPart {
  padding-left: 30rpx;
  margin-top: 20rpx;
}
.formPart .formItem text{
  font-size: 30rpx;
  font-weight: bold;
  
}
.formPart .formItem input {
  margin-left:40rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  font-size: 25rpx;
  border:1rpx solid #999;
  width: 570rpx;
  border-radius: 15rpx;
}

.btn {
  background:linear-gradient(35deg,#ccffff,#ffcccc);
  color: white;
  position: relative;
  left: -15rpx;
  top: 15rpx;
  
}