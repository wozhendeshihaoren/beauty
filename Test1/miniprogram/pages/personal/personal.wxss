  margin: 20rpx;
}
.orderItem{
  border: 1rpx solid #dbd2d8;
  margin-top: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0rpx 0rpx 20rpx -5rpx #999;
}
.proInfo {
  display: flex;
  /* justify-content: space-between; */
  padding: 0 20rpx;
}
.proInfo image{
  width: 300rpx;
  height: 160rpx;
}
.orderInfo{
  margin-left: 20rpx;
}
.orderInfo view{
  font-size: 30rpx;
  margin-top: 10rpx;
  color: #666;
}
.proName{
  /*  // 移动端设备自适应布局 */
display: -webkit-box;
/* // 两行文字大概的高度 */
width: 250rpx;
/* height: 29px;	 */
/* // 溢出隐藏 */
overflow: hidden;	
/* // 溢出省略号表示 */
text-overflow: ellipsis; 
/* // 限制两行 */
-webkit-line-clamp: 1; 
/* // 垂直排列 */
-webkit-box-orient: vertical; 
}
.price{
  /* 使用弹性布局会导致浮动失效 */
  /* float:right; */
  display: flex;
  justify-content: flex-end;
  margin: 0 20rpx 20rpx;
  align-items: flex-end;
  /* display: flex;  */
  align-items: baseline;
  /* align-content: center; */
}
.price text:nth-child(1){
  font-size: 26rpx;
  color: #999;
  margin-right: 10rpx;
}
.price text:nth-child(2){
  font-size: 45rpx;
  font-weight: bold;
}

