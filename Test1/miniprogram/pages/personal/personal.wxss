
.userInfo {
  width: 90%;
  height: 250rpx;
  border: 1rpx solid AliceBlue;
  margin: 100rpx auto 20rpx;
  box-shadow: 0rpx 0rpx 20rpx DarkGrey;
  border-radius: 20rpx;
  position: relative;
}

.userInfo image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    position: absolute;
    left: 50%;
    transform: translate(-50%,-50%);
}

.username {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  font-style:inherit;
  font-size: 30rpx;
}
.userInfo .operation{
  display: flex;
  position: absolute;
  font-size: 25rpx;
  color: #888;
  left: 50%;
  bottom: 20%;
  transform: translate(-50%);
}
/*
*默认头像布局
*/
.userInfo .operation .operationItem{
  margin-left: 20rpx;
}

.box_1 {
