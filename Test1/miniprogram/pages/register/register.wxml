<view class="registerContent">
  <form class="form" catchsubmit="formSubmit">
    <view class="formItem">
      <text space="nbsp"  >用  户 名：</text>
      <input  name="username" placeholder="请输入用户名..."/>
    </view>
    <view class="formItem" >
      <text>手机号码：</text>
      <input name = "phone" placeholder="请输入手机号码..."/>
    </view>
    <view class="formItem" >
      <text space="nbsp">密       码：</text>
      <input name ="password" placeholder="请输入密码..."/>
    </view>
    <button class="btn" formType="submit">注册账号</button>
  </form>
  <view class="toLogin" bindtap="toLogins">已有账号，去登录...</view>

</view>
