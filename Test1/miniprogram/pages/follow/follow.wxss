.userImage {
  width: 100%;
  height: 450rpx;
  position: relative;
  border-bottom: 1rpx solid black;
}
.user {
  height: 100%;
  background:linear-gradient(35deg,#ccffff,#ffcccc);
}
.userImage image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position:absolute;
  left: 50%;
  top:25%;
  transform: translate(-50%);
  
}
.userInfo {
  margin-top: 40rpx;
  font-size: 50rpx;
}
.userInfo view {
  padding-left: 30rpx;
  margin-top: 30rpx;
}
